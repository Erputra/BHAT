    screen 1,0
    for J%=(StRow+2) to LstRow%
        locate StCol,J%
        '      1234567890123456
        print  "                ";
    next J%
    return

'+---------------------------------------------------------------------------+
'|                                                                           |
'|  Function: Transfer error                                                 |
'|                                                                           |
'+---------------------------------------------------------------------------+
TrsErr:
    Ern% = err
    
    select Ern%
        case &H46        'communication error
            Ter%=1
        case &H47        'aborted by [C] key
            Ter%=2
        case &H48        'aborted by [C] key
            Ter%=1
        case &H35        'can't find file
            Ter%=3
        case else
            on error goto 0
    end select

    resume next

    end

